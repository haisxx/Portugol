programa
{
	
inteiro parcelas, vezes
	funcao inicio()
	{
		escreva("Cada drone custa R$8.190 e pode ser pago em até 15 vezes sem juros\n")
		escreva("Em quantas vezes você deseja parcelar o drone? ")
		leia(vezes)
		parcelas = 8190 / vezes
		escreva("\nO valor de cada parcela em " , vezes, " vezes é de R$ ", parcelas) 
	}
}
